<project name="FileCopy" default="copy-files">

  <input message="Enter the source folder name: " addproperty="source.dir" />
  <input message="Enter the destination folder name: " addproperty="destination.dir" />

  <target name="copy-files">
    <copy todir="${destination.dir}">
      <fileset dir="${source.dir}" includes="**/*"/>
    </copy>
  </target>

</project>

